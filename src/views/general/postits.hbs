{{#each myPostits}}
<div class=" card-deck" style="width: 20rem;">
    <div class="card">
        <div class="card text-center">
            <ul class="list-group list-group-flush">
                <p class="card-text">{{text}}</p>
                <p class="card-text">{{nameVideo}}</p>
                <p class="card-text">{{currentTime}}</p>
                <div class="card-footer">
                    <p><small class="text-muted">{{date}}</small></p>
                </div>
            </ul>
            <a href="/postit/delete/{{_id}}" class="btn btn-outline-dark btn-sm">Borrar</a>
        </div>
    </div>
</div>
{{/each}}